<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBG">
    <TextView
        android:id="@+id/board5_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:text="近期心率走勢狀況"
        android:textColor="@color/lightWhiteBlue">
    </TextView>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/ana_board_line5"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/board5_text"
        />
    <LinearLayout
        android:id="@+id/board5_area1"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/ana_board_line5"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/analysis_board"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/heartrate"
            >
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="近2個月內\n平均心率走勢降低"
            android:textColor="@color/lightWhiteBlue">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@+id/board5_area1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/analysis_board"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/down_arrow"
            android:alpha="0.8"
            >
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="平均心率:降低17.8%\n請多加運動強身！"
            android:textColor="@color/lightWhiteBlue">
        </TextView>
    </LinearLayout>

</RelativeLayout>
